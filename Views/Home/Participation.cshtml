@model IEnumerable<BiletModel>

@{
    ViewData["Title"] = "TwojaLista";
}

<h1>Twoja lista zarezerwowanych biletów</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameBilet)
            </th>
            <th></th>
        </tr>
        </thead>
    <tbody>
    
    @foreach (var item in Model)
    {
        <tr>
                <td style="width:65%">
                    @Html.DisplayFor(modelItem => item.NameBilet)
                </td>
                <td style="width:35%">
                    @Html.ActionLink("Szczegóły", "BiletDetails", new {id = item.BiletId})
                    @Html.ActionLink("Edytuj", "EditBilet", new {id = item.BiletId})
                    @Html.ActionLink("Zrezygnuj", "DeleteBilet", new {id = item.BiletId})


                </td>
            </tr>
        
    }
    </tbody>
</table>
<div>
    <a asp-action="Index">Wróć do listy wszystkich wydarzeń</a>
</div>
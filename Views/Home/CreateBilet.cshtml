@model BiletModel
@{
    ViewData["Title"] = "CreateBilet";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h1 class="display-4">Zarezerwuj miejsce</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBilet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NameBilet)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NameBilet)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DescriptionBilet)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DescriptionBilet)
                </dd>
                
                <label asp-for="NumberOfSeats" class="control-label"></label>
                 <textarea asp-for="NumberOfSeats" class="form-control"></textarea>
                <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
                <label asp-for="Personality" class="control-label"></label>
                <textarea asp-for="Personality" class="form-control"></textarea>
                <span asp-validation-for="Personality" class="text-danger"></span>
                <label asp-for="Email" class="control-label"></label>
                <textarea asp-for="Email" class="form-control"></textarea>
                <span asp-validation-for="Email" class="text-danger"></span>
                <label asp-for="Number" class="control-label"></label>
                <textarea asp-for="Number" class="form-control"></textarea>
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Rezerwuj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a class="btn btn-dark" asp-action="Index">Wróć do listy wydarzeń</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


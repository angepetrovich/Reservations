@model IEnumerable<ReservationModel>

@{
    ViewData["Title"] = "Rezerwacja";
}

<h1>Lista wydarzeń</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td style="width:65%">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="width:35%">
                @Html.ActionLink("Edytuj", "EditEvent", new {id = item.EventId})
                @Html.ActionLink("Szczegóły", "DetailsEvent", new {id = item.EventId})
                @if (item.AvailableSeats != 0)
                {
                    @Html.ActionLink("Rezerwuj", "CreateBilet", new {id = item.EventId})
                }
                @Html.ActionLink("Usuń", "DeleteEvent", new {id = item.EventId})
            </td>
        </tr>
    }
    </tbody>
</table>